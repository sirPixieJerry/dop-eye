{
  "name": "dop-eye",
  "version": "0.5.1",
  "description": "A frontend homage to the Japanese pop artist Takashi Murakami.",
  "author": {
    "name": "sirPixieJerry",
    "email": "jerry.bucquet@gmail.com"
  },
  "scripts": {
    "start": "parcel src/index.html -p 4000 --open",
    "build": "parcel build src/index.html --public-url ./",
    "test": "mocha --require ts-node/register src/test/setup.ts src/**/*.test.ts",
    "test:watch": "npm test -- --watch --recursive --extension ts",
    "lint": "npx eslint 'src/**/*.{js,ts,tsx}' --quiet || exit 1",
    "type-check": "npx tsc --noEmit --pretty --project . || exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sirPixieJerry/dop-eye.git"
  },
  "bugs": {
    "url": "https://github.com/sirPixieJerry/dop-eye/issues"
  },
  "homepage": "https://github.com/sirPixieJerry/dop-eye#readme",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/jsdom": "^21.1.6",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "chai": "^4.4.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.27.5",
    "jsdom": "^24.0.0",
    "mocha": "^10.2.0",
    "parcel": "^2.9.2",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "typescript": "4.9.5"
  }
}
